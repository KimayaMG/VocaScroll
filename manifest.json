{
  "manifest_version": 3,
  "name": "VocaScroll - AI Voice Navigation Assistant",
  "version": "2.2.1",
  "description": "AI-powered voice navigation for enhanced web accessibility with continuous listening",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "VocaScroll - AI Voice Assistant",
    "default_icon": {
      "16": "icons/VocaScroll.png",
      "32": "icons/VocaScroll.png",
      "48": "icons/VocaScroll.png",
      "128": "icons/VocaScroll.png"
    }
  },
  "icons": {
    "16": "icons/VocaScroll.png",
    "32": "icons/VocaScroll.png",
    "48": "icons/VocaScroll.png",
    "128": "icons/VocaScroll.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+V"
      },
      "description": "Open VocaScroll popup"
    }
  },
  "host_permissions": [
    "<all_urls>"
  ]
}